{
    "name": "afiphp/afiphp",
    "description": "Webservices AFIP",
    "keywords": [
        "afiphp",
        "afip"
    ],
    "homepage": "https://github.com/afiphp/afiphp",
    "license": "MIT",
    "authors": [
        {
            "name": "Claudio Escobar",
            "email": "claudioe0407@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": ">=7.4"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.0",
        "pestphp/pest": "^1.18",
        "symfony/var-dumper": "^5.3",
        "vimeo/psalm": "^4.8"
    },
    "autoload": {
        "psr-4": {
            "Afiphp\\": "src"
        }
    },
    "scripts": {
        "psalm": "vendor/bin/psalm",
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage-html coverage",
        "format": "vendor/bin/php-cs-fixer fix --allow-risky=yes"
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
